@page
@model EditModel
@{
    ViewData["title"] = "Edit record";
}

<h2>Edit record</h2>
<div class="row">

    <form method="post">
        <input type="hidden" asp-for="Log.LogId" />
        <div class="form-group">
            <label asp-for="Log.StartDateTime" class="control-label"> Started At</label>
            <input type="datetime-local" asp-for="Log.StartDateTime"
                class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Log.Quantity" class="control-label"> Quantity</label>
            <input type="number" step=".1" asp-for="Log.Quantity" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Log.UnitId" class="control-label"> Unit</label>
            <select asp-for="Log.UnitId" asp-items="Model.UnitSelectItems" class="form-control"></select>
        </div>

        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-success" />
        </div>
    </form>
</div>